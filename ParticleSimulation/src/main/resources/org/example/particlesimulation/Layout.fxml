<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<Pane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.particlesimulation.SidebarController">
    <children>
        <VBox fx:id="leftPane" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="168.0" spacing="10">
            <ChoiceBox fx:id="speciesChoiceBox" />
            <Spinner fx:id="particleCounterSpinner" initialValue="100" max="1000"  min="0"  amountToStepBy="10"/>

         <Separator prefWidth="200.0" />
            <Label fx:id="particleMaxAttractionDistanceLabel" text="Max attraction distance: 100"/>
            <Slider fx:id="particleMaxAttractionDistanceSlider" max="200" min="10"  showTickLabels="true" showTickMarks="true" value="100" />
        <Separator prefWidth="200.0" />
            <Label fx:id="particleMinAttractionLabel" text="Min attraction distance: 0.30"/>
            <Slider fx:id="particleMinAttractionSlider"  min="0"  max="1" value="0.30" showTickLabels="true" showTickMarks="true"  />
        <Separator prefWidth="200.0" />
            <Label fx:id="particleFrictionLabel" text="Friction: 0.04"/>
            <Slider fx:id="particleFrictionSlider" max="1" min="0"  value="0.04"  showTickLabels="true" showTickMarks="true" />
        <Separator prefWidth="200.0" />
            <Label fx:id="particleForceMultiplierLabel" text="Force multiplier: 5"/>
            <Slider fx:id="particleForceMultiplierSlider" min="0"  max="20" value="5"  showTickLabels="true" showTickMarks="true" />
        <Separator prefWidth="200.0" />


            <Button onAction="#handleResetAttractionMatrixButton">Reset Attraction Matrix</Button>
            <Button onAction="#handleResetButton">Reset</Button>

            
        </VBox>
        <Canvas fx:id="canvas" height="2.0" />
    </children>
</Pane>
